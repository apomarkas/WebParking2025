@using Microsoft.AspNetCore.Identity
@using WebParking2025.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link custom-nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage</a>
    </li>
    <li class="nav-item">
            <a class="nav-link active custom-nav-link" asp-area="" asp-controller="Admin" asp-action="Panel">Admin Panel</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a class="nav-link custom-nav-link" id="logout" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link custom-nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link custom-nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
